<h1>Messages#index</h1>
<p>Find me in app/views/messages/index.html.erb</p>

<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>

<%= form_for(@message, class:'form-horizontal') do |f| %>
<div class="form-group">
  <%= f.label :name, '名前:', class:"col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :name, class: 'form-control', placeholder:"name"%>  
  </div>
</div>
<div class="form-group">
  <%= f.label :body, '内容:', class:"col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_area :body , class: 'form-control',  placeholder: "message"%>
  </div>
</div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
